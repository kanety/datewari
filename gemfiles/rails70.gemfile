source 'https://rubygems.org'

gem "rails", "~> 7.0.1"
gem "mysql2"
gem "pg"

if ENV['DATABASE'] == 'postgis'
  gem "activerecord-postgis-adapter"
end

gem "concurrent-ruby", "<= 1.3.4"

if RUBY_VERSION >= "3.4"
  gem "base64"
  gem "bigdecimal"
  gem "drb"
  gem "mutex_m"
end

if RUBY_VERSION >= "4.0"
  gem "tsort"
end

gemspec path: "../"
